<div class="row">
    <h2>Cambiar Contraseña</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, html: {role: "form"}) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "New password" %><br />
        <% if @minimum_password_length %>
          <em>Minimo (<%= @minimum_password_length %> caracteres)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, class: "form-control", autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirmar nueva contraseña" %><br />
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
      </div>
    <div class="text-center">
        <div class="actions">
          <%= f.submit "Change my password", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
    
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>