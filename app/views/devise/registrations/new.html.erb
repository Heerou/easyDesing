<div class="row">
  <div class="col-md-3 center-block no-float">
    <h2><span class="glyphicon glyphicon-user"></span> Registro</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {role: "form"}) do |f| %>
      <%= devise_error_messages! %>

      <% if session[:omniauth_errors] %>
        <div class="flash"> <%= session[:omniauth_errors] %> </div>
      <% end %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control",
        value: get_email_ouath %>
      </div>

      <div class="field">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, class: "form-control",
        value: get_username_ouath %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(Minimo <%= @minimum_password_length %> caracteres)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
      </div>
      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %>
      </div>
      <br>
      <div class="text-center">
        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-info" %>
        </div>
        <% end %>
      </div>
    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
